<h2> Editing  <%= @bird.name %></h2>
<%= form_with url: "/birds/#{@bird.id}/edit", method: :patch, data: {turbo: false} do |form| %>
  <p><%= form.label :name %></p>
  <%= form.text_field :name, value: "#{@bird.name}" %>

  <p><%= form.label :population %></p>
  <%= form.text_field :population, value: "#{@bird.population}" %>

  <p><%= form.label :migratory %></p>
<%= form.select :migratory, options_for_select([[true, 'true'], [false, 'false']], @bird.migratory) %>
  <p><%= form.label :sexual_dichromatism %></p>
<%= form.select :sexual_dichromatism, options_for_select([[true, 'true'], [false, 'false']], @bird.sexual_dichromatism) %>

  <p><%= form.submit "Update Bird" %></p>
<% end %>