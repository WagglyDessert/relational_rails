<h1> Birds in the order <%= @avianorder.order %> </h1>

<% @birds.each do |bird| %>
  <h2><%= bird.name %></h2>
  <%= link_to bird.name, "/birds/#{bird.id}" %>
  <p> Population: <%= bird.population %></p>
  <p> Migratory: <%= bird.migratory %></p>
  <p> sexual_dichromatism: <%= bird.sexual_dichromatism %></p>
<% end %>

<p><%= link_to "Add New Bird", "/avianorders/#{@avianorder.id}/birds/new" %></p>
<p><%= link_to "Sort Alphabetically", "/avianorders/#{@avianorder.id}/birds?sort=alpha" %></p>
